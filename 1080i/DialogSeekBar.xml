<?xml version="1.0" encoding="UTF-8"?>
<window>
    <visible>[Window.IsActive(videoosd) | Player.ShowInfo | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding] + window.isactive(fullscreenvideo)</visible>
	<controls>
        <control type="group">          
            <!--Info Panel-->
            <include>OSDInfoPanel</include>		<!-- = "552233" -->
			<!-- clearart variable netflix OSD -->
            <control type="image">
			    <posy>770</posy>
				<align>center</align>				
                <width>100%</width>
                <height>200</height>
                <fadetime>600</fadetime>
                <aspectratio align="center" aligny="bottom">keep</aspectratio>
                <texture background="true">$VAR[VideoPlayerClearArt]</texture> 	<!-- may used in netflix panel $VAR[VideoPlayerClearArt] -->
                <visible>!Control.IsVisible(662244) + Skin.HasSetting(OSDShowClearArt) + Skin.HasSetting(UseNetflixOSDPanel)</visible>				
				<animation end="0,-95" time="0" effect="slide" condition="[Skin.HasSetting(OSDLargeSeekingLabel) + [Player.paused | Player.Seeking]]">Conditional</animation>  
            </control>			
            <!--OSD Panel-->
            <control type="group">
                <visible>Skin.HasSetting(OSDShowInfoOnPause) | VideoPlayer.Content(livetv) | Window.IsActive(videoosd) | Player.ShowInfo</visible>
                <visible>!Window.IsActive(sliderdialog) + !Window.IsActive(pvrosdchannels) + !Window.IsActive(DialogSettings.xml)</visible>
                <animation effect="slide" start="0,400" end="0,0" time="200" condition="!Skin.HasSetting(LowPerformanceMode)">WindowOpen</animation>
                <animation effect="slide" start="0,0" end="0,400" time="200" condition="!Skin.HasSetting(LowPerformanceMode)">WindowClose</animation>
                <animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="250" reversible="false" condition="!Skin.HasSetting(LowPerformanceMode)">Hidden</animation>              
				<include condition="!Skin.HasTheme(classic) + !Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasSetting(UseNetflixOSDPanel)">OSDPanelModern</include>				
				<include condition="!Skin.HasTheme(classic) + Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasSetting(UseNetflixOSDPanel)">OSDPanelModernSlim</include>				               				
				<include condition="!Skin.HasTheme(classic) + Skin.HasSetting(UseNetflixOSDPanel)">OSDPanelNetflix</include>              
				<include condition="Skin.HasTheme(classic)">OSDPanelClassic</include>              
                <!-- weather on OSD -->
                <include condition="!Skin.HasTheme(classic) + ![Skin.HasSetting(UseSlimOSDPanel) | Skin.HasSetting(UseNetflixOSDPanel)] + Skin.HasSetting(ShowWeatherVideoInfoOSD)">WeatherInfoOSD</include>
                <include condition="!Skin.HasTheme(classic) + [Skin.HasSetting(UseSlimOSDPanel) | Skin.HasSetting(UseNetflixOSDPanel)] + Skin.HasSetting(ShowWeatherVideoInfoOSD)">WeatherInfoOSDSlim</include>                
            </control>
            
            <!-- large forward and rewind labels on playback/not paused, when netflix osd, could be more to right, bottom direction?! -->
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <height>100%</height>
                <width>100%</width>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold120</font>
                <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                <label>$VAR[PlayerActionLabelLarge]</label>
                <visible>Skin.HasSetting(OSDLargeSeekingLabel) + ![VideoPlayer.Content(livetv) + Player.Caching]</visible>
				<animation end="0,340" time="0" effect="slide" condition="Skin.HasSetting(UseNetflixOSDPanel)">Conditional</animation>
                <include>HideOsdConditions</include>
            </control>
           
            <!-- small panel if OSD disabled on seek -->
            <control type="group" id="662244">
                <visible>!VideoPlayer.Content(livetv) + !Control.IsVisible(552233)</visible>
                <visible>!Skin.HasSetting(OSDShowInfoOnPause) + !Window.IsActive(videoosd) + [Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding | [Player.Paused + Skin.HasSetting(SeekPanelOnPause)]]</visible>
                <include condition="!Skin.HasSetting(OSDShowInfoOnPause) + Skin.HasSetting(SeekPanelOnPause)">Small_OSD_Seek_Panel</include>
                <include>HideOsdConditions</include>
            </control>
        </control>
        <include condition="Skin.HasSetting(DebugGrid) | Skin.HasSetting(DebugInfo)">DebugInfo</include>
	</controls>
</window>
